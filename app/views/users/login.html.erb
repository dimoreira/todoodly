<h1>Log in</h1>

<%= form_tag validate_path do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</div>
	
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	
	<div class="action">
		<%= submit_tag "Log in" %>
	</div>
<% end %>

<br/>
<hr/>

<%= link_to 'Go to home', root_path, class: 'back_link' %>
<div class="clear"></div>